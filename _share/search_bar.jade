- var info = 'Search...';
- var site = 'atmarksharp.github.io'
//- - var site = 'purecss.io' //- this is only for test

#search_bar
	form#search_bar_inner(action='http://www.google.com/search', method='get', target='_blank')
		input(type='hidden', name='q', value='site:'+site)
		input.search-bar-text(type='text' name='q' style='color:gray' value='#{info}' onfocus='(this.value == "#{info}")? this.value="" : true' onblur='(this.value)? true : this.value="#{info}"')
		input.search-bar-submit(type='submit')
		