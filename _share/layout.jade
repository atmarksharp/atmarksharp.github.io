	//- 		}else{
	//- 			$('#adsense-mobile').removeAttr('hidden');
	//- 		}
	//- 	});

	script.
		Zepto(function($){
			$('#post').find('a').attr('target','_blank');
		});

body
	#media_query_desktop.pure-hidden-desktop
	#media_query_tablet.pure-hidden-tablet
	#media_query_mobile.pure-hidden-phone

