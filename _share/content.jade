- var is_post = (current.path[0] == 'posts');
- var data = (current.path[0] == 'posts')? public.posts._data[current.source] : public._data[current.source]
- var categ = (is_post)? data.categories.split(',') : []

mixin post_photo(path)
	img(src='../img/'+path, alt=path)

#content.pure-u-2-3
	#content_inner
		if is_post
			#post_date= data.date
			h2#post_title= data.title
			#categories 
				span#categories-label categories:
				for item in categ
					span.category: a(href='#')= item

			#post_photo
				+post_photo(data.img)
		#post
			!= yield

