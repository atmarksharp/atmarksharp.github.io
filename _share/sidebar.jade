mixin widget-title(title)
	h3.widget-title
		span.widget-title-text= title

#sidebar.pure-u-1-3.check-mobile.float
	#sidebar_inner
		!= partial('search_bar.jade')

		+widget-title('RECENT POSTS')
		.widget-content
			ul.widget-post-list
				for c, path in public.posts._data
					li.widget-post-item
						a= c.title