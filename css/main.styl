@import url('http://fonts.googleapis.com/css?family=Oswald');

// Parameters /////////////////

img-path = '../img'
radius = 10px
frame-padding = 22px
outer-frame-max-width = 980px
// base-color = #C4302B
base-color = #2B61C5
// body-color = #eeeeee
body-color = #E1E4EA
line-color = #dfdfdf
link-color = #666666
link-hover-color = #C4302B
menu-link-color = #666666
footer-color = #242424
content-pd = frame-padding
sidebar-pd = 0px
sidebar-ln = 1px
sidebar-mg = -(sidebar-pd + sidebar-ln)

// Functions /////////////////

line()
	1px solid line-color

img(file)
	url(img-path + '/' + file)

box-shadow(args...)
	-webkit-box-shadow args
	-moz-box-shadow args
	box-shadow args

text-shadow(args...)
	-webkit-text-shadow args
	-moz-text-shadow args
	text-shadow args

border-radius(args...)
	border-radius args
	-moz-border-radius args
	-webkit-border-radius args
	-o-border-radius args
	-ms-border-radius args

google-font()
	font-family 'Oswald' sans-serif

///////////////////////////////
///////////////////////////////

body
	background-color body-color
	background-image img('body-back.png')
	background-repeat repeat
	background-position top left
	background-attachment fixed

a
	cursor pointer
	color link-color
	text-decoration underline

ul.menu-list
	margin 0
	padding 0
	clear both
	float none

li.menu-item
	padding 13px 0px
	float left
	list-style-type none

li.menu-item a
	padding 0px 15px
	border-left line()
	color menu-link-color
	text-decoration none

li.menu-item.first a
	border-left none

a:hover
	color link-hover-color

#outer_frame
	border-radius(radius)
	background #ffffff
	box-shadow(0 0px 8px rgba(150, 150, 150, 0.4))
	max-width outer-frame-max-width - (frame-padding * 2)
	margin 20px auto

#header
	border-radius(radius radius 0 0)

#logo
	border-radius(radius radius 0 0)
	background img('header-back4.jpg')
	height 140px
	width 100%
	display table

#logo_text
	margin auto auto
	display table-cell 
	google-font()
	font-size 20pt
	vertical-align middle
	text-align center

#logo_text_inner
	color white
	letter-spacing 5px
	text-shadow(1px 1px 3px #000)

#menu
	margin-left frame-padding
	margin-right frame-padding
	margin-top 5px
	font-family Helvetica, Arial, sans-serif
	font-size 10pt
	height auto
	border-top line()

#center_wrapper
	clear both
	padding frame-padding
	padding-top 0

#content
	float left
	border-top line()
	margin-left -content-pd
	// background #eeeeee

#content_inner
	margin-top: frame-padding
	margin-bottom: frame-padding
	margin-right: frame-padding

#sidebar
	float left
	border-left line()
	border-top line()
	margin-right sidebar-mg
	padding-bottom 10px

#sidebar_inner
	margin-top: frame-padding
	margin-left: frame-padding
	margin-right: frame-padding

#search_bar
	position relative
	height 50px

#search_bar_inner:after
	border 5px solid transparent
	border-right-color base-color
	content " "
	display block
	width 0
	height 0
	position absolute
	right 31px
	top 20px
	z-index 2

#search_bar_inner
	float right
	margin-top 10px

input.search-bar-text
	pd = 5px
	ln = 0.5px
	pl = pd + ln

	font-size 9pt
	padding pd
	width 150px - (pl*2)
	height 31px - (pl*2)
	border line()

input.search-bar-submit
	padding 0
	width 31px
	height 31px
	text-indent -999999px
	background: img('search.png') no-repeat center;
	border none
	background-color base-color

.widget-title
	vertical-align baseline
	google-font()
	font-size 12pt
	background img('widget-divider.png') repeat top center

.widget-title-text
	padding-right 7px
	background white

.widget-content
	color link-color
	font-size 10pt

ul.widget-post-list
	margin 0
	padding 0

li.widget-post-item
	list-style-type none
	margin 5px

span.label
	font-weight bold

.github img
	vertical-align middle

#footer
	border-radius(0 0 radius radius)
	clear both
	color link-color
	font-size 10pt
	color #aaaaaa
	padding frame-padding
	background footer-color

.footer-widget-title
	vertical-align baseline
	google-font()
	font-size 12pt
	background img('widget-divider.png') repeat top center

.footer-widget-title-text
	padding-right 7px
	background footer-color

.footer-widget-content
	color link-color
	font-size 10pt

h4.footer-powered-title
	background img('widget-divider.png') repeat top center
	margin 0
	margin-bottom 15px
	padding 0
	letter-spacing 2px
	google-font()
	font-size 9pt
	text-align center

span.footer-back
	background footer-color

img.pow-logo
	margin-right 10px
	vertical-align middle

.center
	text-align center

